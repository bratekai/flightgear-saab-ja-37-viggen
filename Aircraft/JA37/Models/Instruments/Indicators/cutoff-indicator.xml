<?xml version="1.0"?>

<PropertyList>
    <path>cutoff-indicator.ac</path>
    
    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>lampBase</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-light</inherits-from>
        <object-name>lamp</object-name>
    </effect>

    <animation>
        <type>material</type>
        <object-name>lamp</object-name>
        <emission>
            <red>0.7</red>
            <green>0.0</green>
            <blue>0.0</blue>
            <factor-prop>fdm/jsbsim/propulsion/engine/cutoff-indicator</factor-prop>
        </emission>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>lamp</object-name>
        <object-name>lampBase</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>cutoff Indicator</tooltip-id>
                <label>Cutoff indicator</label>
            </binding>
        </hovered>
    </animation>
</PropertyList>
