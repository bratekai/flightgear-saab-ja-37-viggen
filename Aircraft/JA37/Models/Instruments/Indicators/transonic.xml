<?xml version="1.0"?>

<PropertyList>
    <path>transonic.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>lampBase</object-name>
        <object-name>label-aj</object-name>
        <object-name>label-ja</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-light</inherits-from>
        <object-name>lamp</object-name>
        <object-name>lampTop</object-name>
    </effect>

    <animation>
        <type>material</type>
        <object-name>lamp</object-name>
        <object-name>lampTop</object-name>
        <emission>
            <red>0.8</red>
            <green>0.7</green>
            <blue>0</blue>
            <factor-prop>/instrumentation/transonic-indicator</factor-prop>
        </emission>
    </animation>

    <!-- Different labels for JA/AJS -->
    <animation>
        <type>select</type>
        <object-name>label-ja</object-name>
        <condition>
            <equals>
                <property>ja37/systems/variant</property>
                <value>0</value>
            </equals>
        </condition>
    </animation>
    <animation>
        <type>select</type>
        <object-name>label-aj</object-name>
        <condition>
            <not-equals>
                <property>ja37/systems/variant</property>
                <value>0</value>
            </not-equals>
        </condition>
    </animation>

    <animation>
      <type>material</type>
      <object-name>label-ja</object-name>
      <object-name>label-aj</object-name>
      <object-name>lampTop</object-name>
      <condition><property>/ja37/effect/swedish-labels</property></condition>
      <texture>labels-se.png</texture>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>lamp</object-name>
        <object-name>lampTop</object-name>
        <object-name>lampBase</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>Transonic Indicator</tooltip-id>
                <label>Transonic regime or risky low speed for reverse thrust</label>
                <property>/instrumentation/transonic-indicator</property>
            </binding>
        </hovered>
    </animation>
</PropertyList>
