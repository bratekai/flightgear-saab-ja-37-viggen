<?xml version="1.0"?>

<PropertyList>
    <path>reservkurs.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>mount</object-name>
        <object-name>label</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-light</inherits-from>
        <object-name>lamp</object-name>
    </effect>

    <animation>
      <type>material</type>
      <object-name>label</object-name>
      <condition><property>/ja37/effect/swedish-labels</property></condition>
      <texture>labels-se.png</texture>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>lamp</object-name>
        <object-name>mount</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-assign</command>
                <property>ja37/avionics/button-reservkurs</property>
                <value>1</value>
            </binding>
            <binding>
                <command>property-toggle</command>
                <property>ja37/avionics/reservkurs</property>
            </binding>
            <mod-up>
                <binding>
                    <command>property-assign</command>
                    <property>ja37/avionics/button-reservkurs</property>
                    <value>0</value>
                </binding>
            </mod-up>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>reservkurs</tooltip-id>
                <label>Backup heading</label>
                <property>/instrumentation/transonic-indicator</property>
            </binding>
        </hovered>
    </animation>
    <animation>
       <type>translate</type>
       <object-name>lamp</object-name>
       <object-name>mount</object-name>
       <property>ja37/avionics/button-reservkurs</property>
       <factor>0.005</factor>
       <offset-m>0</offset-m>
       <axis>
         <x>-1</x>
       </axis>
       <center>
            <x-m>0</x-m>
            <y-m>0</y-m>
            <z-m>0</z-m>
        </center>
    </animation>
    
    <animation>
        <type>material</type>
        <object-name>lamp</object-name>
        <emission>
            <red>0.8</red>
            <green>0.34</green>
            <blue>0.06</blue>
            <factor-prop>ja37/avionics/reservkurs-indicator</factor-prop>
        </emission>
    </animation>
</PropertyList>
