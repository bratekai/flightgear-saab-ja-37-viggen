<?xml version="1.0"?>
<PropertyList>
    <path>../Common/gauge.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-transparent-shader</inherits-from>
        <object-name>glass</object-name>
    </effect>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>mount</object-name>
    </effect>

    <animation>
        <type>material</type>
        <object-name>dial</object-name>
        <property-base>ja37/texture</property-base>
        <texture-prop>gauge-mano-brake</texture-prop>
        <texture>brake-manometer-face.png</texture>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>needle</object-name>
        <condition>
            <property>ja37/elec/ac-bus-main-bool</property>
        </condition>
        <property>fdm/jsbsim/systems/flight/brake-pressure-kpm2</property>
        <interpolation>
            <entry>
                <ind>0</ind>
                <dep>-135</dep>
            </entry>
            <entry>
                <ind>350</ind>
                <dep>137.5</dep>
            </entry>
        </interpolation>
        <axis>
            <x>-1</x>
            <y>0</y>
            <z>0</z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>dial</object-name>
        <object-name>glass</object-name>
        <hovered>
            <binding>
                <condition>
                    <property>ja37/elec/ac-bus-main-bool</property>
                </condition>
                <command>set-tooltip</command>
                <tooltip-id>brakemano</tooltip-id>
                <label>Brake manometer</label><!-- %0.1f kp/cm2 -->
                <property>fdm/jsbsim/systems/flight/brake-pressure-kpm2</property>
            </binding>
        </hovered>
    </animation>


    <!-- lighting -->
    <animation>
        <object-name>dial</object-name>
        <object-name>needle</object-name>
        <type>material</type>
        <emission>
            <red-prop>instrumentation/instrumentation-light/r</red-prop>
            <green-prop>instrumentation/instrumentation-light/g</green-prop>
            <blue-prop>instrumentation/instrumentation-light/b</blue-prop>
            <factor-prop>controls/lighting/instruments-norm</factor-prop>
        </emission>
    </animation>


</PropertyList>
