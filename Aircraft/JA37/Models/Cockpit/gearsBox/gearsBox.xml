<?xml version="1.0"?>

<PropertyList>

    <path>gearsBox.ac</path>

    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>
        <object-name>handleGears</object-name>
        <object-name>handleBrake</object-name>
        <object-name>handleBypass</object-name>
        <object-name>thumbLatch</object-name>
        <object-name>stickThrottle</object-name>
        <object-name>box</object-name>
    </effect>

    <animation>
        <type>translate</type>
        <object-name>handleBypass</object-name>
        <property>fdm/jsbsim/gear/bypass-lever</property>
        <factor>0.010</factor>
        <offset>0</offset>
        <center>
            <x-m>  0.00 </x-m>
            <y-m>  0.13614 </y-m>
            <z-m>  0.08639 </z-m>
        </center>
        <axis>
            <x> 0.0 </x>
            <y> 0.0 </y>
            <z> 1.0 </z>
        </axis>
    </animation>

    <animation>
        <type>translate</type>
        <object-name>thumbLatch</object-name>
        <property>fdm/jsbsim/gear/gear-lever-latch</property>
        <factor>0.004</factor>
        <offset>0</offset>
        <center>
            <x-m>  0.00 </x-m>
            <y-m>  0.13614 </y-m>
            <z-m>  0.08639 </z-m>
        </center>
        <axis>
            <x> 1.0 </x>
            <y> 0.0 </y>
            <z> 0.0 </z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>handleGears</object-name>
        <object-name>thumbLatch</object-name>
        <property>fdm/jsbsim/gear/gear-lever-norm</property>
        <factor>-20</factor>
        <offset-deg>20</offset-deg>
        <center>
            <x-m>  0.00 </x-m>
            <y-m>  0.13614 </y-m>
            <z-m>  0.08639 </z-m>
        </center>
        <axis>
            <x> 0.0 </x>
            <y> 1.0 </y>
            <z> 0.0 </z>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>handleBrake</object-name>
        <property>fdm/jsbsim/autoflight/athr-pos</property>
        <factor>-10</factor>
        <offset-deg>10</offset-deg>
        <center>
            <x-m>  0.01466 </x-m>
            <y-m>  0.00052 </y-m>
            <z-m> 0.08741 </z-m>
        </center>
        <axis>
            <x> 0.0 </x>
            <y> 1.0 </y>
            <z> 0.0 </z>
        </axis>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>handleGears</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-toggle</command>
                <property>controls/gear/gear-down</property>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>handle-gears</tooltip-id>
                <label>Gears lever%s</label>
                <property>fdm/jsbsim/gear/gear-lever-lock</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = [' ', ' (LOCKED)'];
                    return modes[arg[0]];
                </script>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>handleBypass</object-name>
        <action>
            <button>0</button>
            <binding>
                <command>property-toggle</command>
                <property>fdm/jsbsim/gear/bypass-lever</property>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>handle-bypass</tooltip-id>
                <label>Gears lever electro-mechanical lock emergency bypass</label>
            </binding>
        </hovered>
    </animation>

    <animation>
        <type>pick</type>
        <object-name>handleBrake</object-name>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>autothrottle</tooltip-id>
                <label>Auto-throttle (down), throttle-friction (up)</label>
            </binding>
        </hovered>
        <action>
            <name>A/T engage</name>
            <button>0</button>
            <repeatable>false</repeatable>
            <binding>
                <command>property-toggle</command>
                <property>fdm/jsbsim/autoflight/athr-cmd</property>
            </binding>
        </action>
    </animation>

</PropertyList>
