<?xml version="1.0"?>

<PropertyList>

    <path>stick.ac</path>
    
    <effect>
        <inherits-from>Aircraft/JA37/Models/Effects/ja37-cockpit-shader</inherits-from>    
        <object-name>stick</object-name>
        <object-name>arm-selector</object-name>
        <object-name>stick-handle</object-name>
        <object-name>stick-roll</object-name>
        <object-name>stick-mast</object-name>
        <object-name>WPNS-button</object-name>
        <object-name>DLC-wheel</object-name>
        <object-name>stick-skirt</object-name>
        <object-name>trim-hat</object-name>
    </effect>

    <animation>
        <type>rotate</type>
        <object-name>stick-handle</object-name>
        <object-name>stick-roll</object-name>
        <object-name>stick-mast</object-name>
        <property>fdm/jsbsim/fcs/elevator/input</property>
        <interpolation> <!-- Corrected for linear -->
            <entry>
                <ind>1</ind>
                <dep>20</dep>
            </entry>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>-0.727272</ind>
                <dep>-14.54544</dep>
            </entry>
        </interpolation>
        <center>
            <z-m>0.0153</z-m>
        </center>
        <axis>
            <y>-1</y>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>stick-handle</object-name>
        <object-name>stick-roll</object-name>
        <property>fdm/jsbsim/fcs/aileron/input</property>
        <factor>20</factor>
        <center>
            <z-m>0.1895</z-m>
        </center>
        <axis>
            <x>-1</x>
        </axis>
    </animation>
    <animation>
        <type>rotate</type>
        <object-name>stick-roll</object-name>
        <property>fdm/jsbsim/fcs/aileron/input</property>
        <interpolation>
            <entry>
                <ind>1</ind>
                <dep>20</dep>
            </entry>
            <entry>
                <ind>0</ind>
                <dep>0</dep>
            </entry>
            <entry>
                <ind>-1</ind>
                <dep>-20</dep>
            </entry>
        </interpolation>
        <center>
            <x-m>0</x-m>
            <y-m>-0.0536</y-m>
            <z-m>0.1751</z-m>
        </center>
        <axis>
            <x>1</x>
        </axis>
    </animation>

    <animation>
        <type>rotate</type>
        <object-name>arm-selector</object-name>
        <property>controls/armament/station-select-custom</property>
        <factor>30</factor>
        <center>
            <x-m>0.0842</x-m>
            <y-m>0</y-m>
            <z-m>0.4402</z-m>
        </center>
        <axis>
            <y>1</y>
        </axis>
    </animation>


