<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>
  <name>saab37options</name>
  <modal type="bool">false</modal>
  <layout>vbox</layout>
  <halign>left</halign>

  <nasal>
    <open>
      var type_to_anno = {
          1: "1971",
          2: "1979",
          3: "1997",
      };

      var update_gsuit_anno = func {
          var type = getprop("/ja37/effect/g-suit");
          var anno = type_to_anno[type];
          setprop("/ja37/effect/g-suit-anno", anno);
      }

      update_gsuit_anno();
    </open>
  </nasal>
  
  <group>
    <layout>hbox</layout>
    <empty><stretch>1</stretch></empty>
    <text><label>Options</label></text>
    <empty><stretch>1</stretch></empty>
    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend></legend>
      <default>1</default>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </button>
  </group>

  <hrule/>

  <group>
    <layout>table</layout>

    <!-- HUD line width -->
    <text>
      <row>0</row>
      <col>0</col>
      <halign>left</halign>
      <label>HUD line width</label>
    </text>

    <slider>
      <row>0</row>
      <col>1</col>
      <property>/ja37/hud/stroke-linewidth</property>
      <min>1</min>
      <max>10</max>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <binding>
        <command>nasal</command>
        <script>canvas_HUD.reinit();</script>
      </binding>
    </slider>

    <!-- G suit -->
    <text>
      <row>1</row>
      <col>0</col>
      <halign>left</halign>
      <label>G-suit quality: anno 1997</label>
      <format>G-suit quality: anno %s</format>
      <property>/ja37/effect/g-suit-anno</property>
      <live>true</live>
    </text>

    <slider>
      <row>1</row>
      <col>1</col>
      <property>/ja37/effect/g-suit</property>
      <min>1</min>
      <max>3</max>
      <step>1</step>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <binding>
        <command>nasal</command>
        <script>update_gsuit_anno();</script>
      </binding>
    </slider>

    <!-- Swedish cockpit -->
    <text>
      <row>2</row>
      <col>0</col>
      <halign>left</halign>
      <label>Cockpit labels in Swedish (default: English)</label>
    </text>

    <checkbox>
      <row>2</row>
      <col>1</col>
      <property>/ja37/effect/swedish-labels</property>
      <live>true</live>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </checkbox>

    <!-- Swedish HUD/TI -->
    <text>
      <row>3</row>
      <col>0</col>
      <halign>left</halign>
      <label>HUD/TI in metric units and Swedish (default: imperial and English)</label>
    </text>

    <checkbox>
      <row>3</row>
      <col>1</col>
      <property>/ja37/hud/units-metric</property>
      <live>true</live>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </checkbox>

    <!-- TI menus -->
    <text>
      <row>4</row>
      <col>0</col>
      <halign>left</halign>
      <label>TI Display: show non-functional menu items</label>
      <visible>
        <equals>
          <property>/ja37/systems/variant</property>
          <value>0</value>
        </equals>
      </visible>
    </text>

    <checkbox>
      <row>4</row>
      <col>1</col>
      <property>/ja37/displays/show-full-menus</property>
      <live>true</live>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <visible>
        <equals>
          <property>/ja37/systems/variant</property>
          <value>0</value>
        </equals>
      </visible>
    </checkbox>

    <!-- TI map -->
    <text>
      <row>5</row>
      <col>0</col>
      <halign>left</halign>
      <label>TI Display: use Internet to fetch map</label>
      <visible>
        <equals>
          <property>/ja37/systems/variant</property>
          <value>0</value>
        </equals>
      </visible>
    </text>

    <checkbox>
      <row>5</row>
      <col>1</col>
      <property>/ja37/displays/live-map</property>
      <live>true</live>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <visible>
        <equals>
          <property>/ja37/systems/variant</property>
          <value>0</value>
        </equals>
      </visible>
    </checkbox>

    <!-- Outside rust -->
    <text>
      <row>6</row>
      <col>0</col>
      <halign>left</halign>
      <label>Rust on fuselage (requires ALS)</label>
    </text>

    <checkbox>
      <row>6</row>
      <col>1</col>
      <property>/ja37/effect/rust-outside</property>
      <live>true</live>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </checkbox>

    <text>
      <row>7</row>
      <col>0</col>
      <halign>left</halign>
      <label>Rust in cockpit (requires ALS)</label>
    </text>

    <checkbox>
      <row>7</row>
      <col>1</col>
      <property>/ja37/effect/rust-inside</property>
      <live>true</live>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </checkbox>

    <hrule>
      <row>8</row>
      <col>0</col>
      <colspan>2</colspan>
    </hrule>

    <text>
      <row>9</row>
      <col>0</col>
      <halign>left</halign>
      <label>Enable multiplayer damage</label>
    </text>

    <checkbox>
      <row>9</row>
      <col>1</col>
      <enable><property>/ja37/on-ground</property></enable>
      <property>/payload/armament/msg</property>
      <live>true</live>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </checkbox>
  </group>

    <text>
      <halign>left</halign>
      <label>This option allows to deal and receive damage from other compatible aircrafts,</label>
    </text>
    <text>
      <halign>left</halign>
      <label>if they have also enabled it. It can only be toggled when stopped on the ground.</label>
    </text>
    <text>
      <halign>left</halign>
      <label>Enabling this enforces some realism options, such as blackout, normal simulation</label>
    </text>
    <text>
      <halign>left</halign>
      <label>speed, and disabling fuel, payload, and repair menus while in flight.</label>
    </text>
</PropertyList>
